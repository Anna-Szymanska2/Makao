<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="choosingRoomPane" prefHeight="200.0" prefWidth="330.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="makao.controller.ChoosingRoomController">
   <children>
      <Label layoutX="40.0" layoutY="25.0" text="Enter the code to join a created room" />
      <Button fx:id="enterButton" layoutX="40.0" layoutY="62.0" mnemonicParsing="false" onAction="#tryToEnterTheRoom" text="Enter " />
      <Label layoutX="40.0" layoutY="105.0" text="Or create your own" />
      <Button fx:id="createRoomButton" layoutX="38.0" layoutY="142.0" mnemonicParsing="false" onAction="#createNewRoom" text="Create a new room" />
      <TextField fx:id="codeTextField" layoutX="118.0" layoutY="62.0" />
      <ComboBox fx:id="numberOfPlayersComboBox" layoutX="179.0" layoutY="142.0" prefHeight="0.0" prefWidth="117.0" />
      <Label layoutX="179.0" layoutY="105.0" text="Number of players" />
   </children>
</AnchorPane>
